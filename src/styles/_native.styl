@require '_variables'

html,
body
  margin 0
  color $color-darkest
  font-size 16px
  font-family $font-family-primary
  font-weight 300

h1, h2, h3, h4, h5, h6
  margin 0
  font-weight bold

h1
  font-size $font-size-xxl
  letter-spacing -1px

h2
  scroll-margin-top 50px

p
  margin 0
  line-height 1.5
  & + p
    margin-top 20px

em
  font-family $font-family-secondary
  font-style italic

a
  white-space nowrap
