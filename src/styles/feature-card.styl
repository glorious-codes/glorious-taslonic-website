@require '_variables'

$action-arrow-border = 1px solid $color-grey-dark
$side-padding = 40px

.tc-feature-card
  position relative
  margin 0 auto
  max-width 300px
  background-color $color-grey-lighter
  border-radius 30px 30px 0 0
  .tc-feature-icon
    position absolute
    top -40px
    right 0
  h3
    padding 100px $side-padding 0
    letter-spacing -.5px
  p
    color $color-grey-dark
    font-size $font-size-xs

.tc-feature-card-content
  margin 20px 0 40px
  padding 0 $side-padding

.tc-feature-card-action
  a
    position relative
    display block
    padding 25px $side-padding
    color $color-grey-dark
    font-size $font-size-xs
    font-weight bold
    text-decoration none
    text-transform uppercase
    border-top 2px solid $color-lightest
    transition all 300ms
    &:after
      content ''
      position absolute
      right $side-padding
      top 50%
      width 10px
      height 10px
      transform translateY(-50%) rotate(45deg)
      border-width 1px 1px 0 0
      border-style solid
      border-color $color-grey-dark
      transition all 300ms
    &:hover,
    &:active,
    &:focus
      color $color-grey-darker
      background-color alpha($color-grey-light, .5)
      outline 0
      &:after
        right $side-padding - 10px
        border-color $color-grey-darker
